{
    "name": "backend-starter",
    "version": "0.1.0",
    "description": "A starting point for Node.js express apps with TypeScript",
    "main": "dist/server.js",
    "scripts": {
        "start": "SET NODE_ENV=prod && tsc &&  node dist/server.js",
        "dev": "SET NODE_ENV=dev && ts-node-dev src/server.ts",
        "lint": "eslint . --ext .ts",
        "lint-fix": "eslint src/* --fix",
        "test": "SET NODE_ENV=test && mocha --require ts-node/register './src/test/**/*.ts'",
        "coverage": "nyc yarn test"
    },
    "dependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.12",
        "@types/mocha": "^9.0.0",
        "@types/morgan": "^1.9.3",
        "@types/passport-jwt": "^3.0.6",
        "bcrypt": "^5.0.1",
        "body-parser": "^1.19.0",
        "chalk": "^4.1.2",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dotenv": "^10.0.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-validator": "^6.12.0",
        "joi": "^17.4.2",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "mongoose": "^5.12.15",
        "morgan": "^1.10.0",
        "nanoid": "^3.1.25",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0"
    },
    "devDependencies": {
        "@types/errorhandler": "^1.5.0",
