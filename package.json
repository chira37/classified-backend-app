        "@types/node": "^16.6.1",
        "@types/passport-local": "^1.0.34",
        "@typescript-eslint/eslint-plugin": "^4.29.2",
        "@typescript-eslint/parser": "^4.29.2",
        "chai": "^4.3.4",
        "chai-http": "^4.3.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.24.0",
        "eslint-plugin-prettier": "^3.4.0",
        "esm": "^3.2.25",
        "mocha": "^9.0.3",
        "nyc": "^15.1.0",
        "prettier": "^2.3.2",
